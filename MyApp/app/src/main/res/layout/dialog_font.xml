<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/dialog_font_bg"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="调整文章字号"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="22sp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="32dp"
        android:layout_height="120dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@color/share_text_gray" />
        <View
            android:id="@+id/fz_view_font_line"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"></View>
        <RelativeLayout
            android:id="@+id/fz_line_left"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true">

            <Button
                android:layout_width="0.5dp"
                android:layout_height="10dp"
                android:layout_centerInParent="true"
                android:background="@color/share_text_gray" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fz_line_right"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@+id/fz_view_font_line"
            android:layout_centerVertical="true">

            <Button
                android:layout_width="0.5dp"
                android:layout_height="10dp"
                android:layout_centerInParent="true"
                android:background="@color/share_text_gray" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fz_line_center"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true">

            <Button
                android:layout_width="0.5dp"
                android:layout_height="10dp"
                android:layout_centerInParent="true"
                android:background="@color/share_text_gray" />
        </RelativeLayout>

        <TextView
            android:id="@+id/fz_tv_left"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/fz_line_left"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="标准字号"
            android:textSize="17sp"
            android:textColor="@color/share_text_gray" />

        <TextView
            android:id="@+id/fz_tv_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/fz_line_center"
            android:layout_centerInParent="true"
            android:layout_marginBottom="15dp"
            android:text="大字号"
            android:textSize="17sp"
            android:textColor="@color/share_text_gray" />

        <TextView
            android:id="@+id/fz_tv_right"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/fz_line_right"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="特大号"
            android:textSize="17sp"
            android:textColor="@color/share_text_gray" />

        <ImageView
            android:id="@+id/fz_iv_left"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_font_size"
            android:visibility="visible" />
    </RelativeLayout>
    <Button
        android:id="@+id/fz_sure_btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/dialog_font_bg"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textSize="20sp"
        android:text="确定"
        android:textColor="#EB1F10"
        android:layout_marginBottom="8dp"/>
</LinearLayout>